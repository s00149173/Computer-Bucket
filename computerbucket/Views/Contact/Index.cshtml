@{
    ViewBag.Title = "Contact";
}
<div class="container">
    <div class="row">
        <div class="section_header">
            <h3>Contact Us</h3>
            <div class="border_dark"></div>
        </div>
    </div>

    <div class="row" id="contactDetails">
        <div class="row">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-earphone"></span> Tel:
            </div>
            <div class="col-md-8">
                087-456788
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-envelope"></span> Email:
            </div>
            <div class="col-md-8">
                computerbucket@itsligo.ie
            </div>
        </div>
    </div>
    <div class="section_header">
        <h3>Form</h3>
    </div>
    <div class="form">
        <div class="row form">
            <div class="col-md-6 row-col" id="contactForm">
                <div class="box">
                    <input id="name_input" class="name form-control" type="text" placeholder="Name">
                    <input id="email_input" class="email form-control" type="text" placeholder="Email">
                    <input id="phone_input" class="phone form-control" type="text" placeholder="Phone">
                </div>
            </div>

            <div class="col-md-6 row-col">
                <textarea placeholder="Type your message here..." class="form-control"></textarea>
            </div>
            <div class="col-md-3" style="margin-top:1.7%;">
                @Html.ActionLink("SUBMIT", "InsertProduct", "Orders", new { @class = "btn btn-info", @id = "submit_button" })
            </div>

        </div>
    </div>
    <div class="section_header">
        <h3>Map</h3>
    </div>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="width:960px;">
        <div style="overflow:hidden;height:400px;width:960px;">
            <div id="gmap_canvas" style="height:400px; width:960px;"></div>
            <style>
                .gmap {
                    position: relative;
                    line-height: 1.12;
                    overflow: hidden;
                    white-space: nowrap;
                    display: block;
                    margin-bottom: 2px;
                    font-weight: 500;
                }
            </style><iframe src="http://www.embed-google-map.com/mapembed.php"><a href="http://www.hostbit.de" class="map-data">http://www.hostbit.de</a></iframe>
        </div>
        <script type="text/javascript">function init_map() { var myOptions = { zoom: 14, center: new google.maps.LatLng(54.27661029999999, -8.47608880000007), mapTypeId: google.maps.MapTypeId.ROADMAP }; map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions); marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(54.27661029999999, -8.47608880000007) }); infowindow = new google.maps.InfoWindow({ content: "<span class='gmap'><b>Computer Bucket</b></span><span class='gmap'>Sligo</span><span class='gmap'> Sligo</span>" }); google.maps.event.addListener(marker, "click", function () { infowindow.open(map, marker); }); infowindow.open(map, marker); } google.maps.event.addDomListener(window, "load", init_map);</script>
    </div>
</div>
