@using System.Activities.Expressions
@using System.Web.Mvc.Html
@model IEnumerable<computerbucket.Product>
<div class="col-md-4">
    <div class="row">
        <div class="container">
            @if (@ViewBag.Image != null)
            { 
                <img src="@ViewBag.Image" style="width: 250px; height: 250px;" />
            }
            else
            {
                <img src="~/Images/my_computer_w.png" style="width: 250px; height: 250px;" />;
            
            }
            
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="container">
            <h4><b>Price </b> <span  style="color:red"> @ViewBag.Price € </span></h4>
        </div>
    </div>

</div>

<div class="col-md-8">

    <table class="table table-striped">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Category.CategoryName)</b>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
            </tr>
        }

    </table>

</div>
