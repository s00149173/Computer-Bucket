@model IEnumerable<computerbucket.Product>
@{
    ViewBag.Title = "Home Page";
}
<div id="myCarousel" class="carousel slide effect6" data-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel images -->
    <div class="carousel-inner">
        <div class="active item">

            <img src="~/Images/banner_2.gif" />
            <div class="carousel-caption">
                <h3>&nbsp;</h3>
                @Html.ActionLink("Start", "Index", "BuildPC", null, new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="item">
            <img src="~/Images/banner_3_gaming.gif" />
            <div class="carousel-caption">
                <h3>&nbsp;</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/banner_inslideprice.gif" />
            <div class="carousel-caption">
                <h3>&nbsp;</h3>
            </div>
        </div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<br />

<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <div class="row-fluid text-center">
                    <h3>Gaming Computers</h3>
                </div>
                <div class="row text-center">
                    <img src="~/Images/gaming.png" height="120" width="180" alt="Gaming image" />
                </div>
                <div class="row text-center">
                    <h5>Games is what you love? Love the get the best performances and graphics when playing? Take a look gaming offers:</h5>
                </div>
                <div class="row-fluid text-center">
                    @Html.ActionLink("See now", "PreBuildComputers", "Home", new {typeId=1}, new {@class="btn btn-info btn-xs"})
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <div class="row-fluid text-center">
                    <h3>Business Computers</h3>
                </div>
                <div class="row text-center">
                    <img src="~/Images/business.png" height="120" width="180" alt="Business image" />
                </div>
                <div class="row text-center">
                    <h5>Opening a new company? Need new computers to your company? Take a look in our business offers:</h5>
                </div>
                <div class="row-fluid text-center">
                    @Html.ActionLink("See now", "PreBuildComputers", "Home", new {typeId=2}, new {@class="btn btn-info btn-xs"})
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <div class="row-fluid text-center">
                    <h3>Home computers</h3>
                </div>
                <div class="row text-center">
                    <img src="~/Images/home_computer.png" height="120" width="180" alt="Home image" />
                </div>
                <div class="row text-center">
                    <h5>Your desktop computer at home is getting older and slow? Take a look in our home offers:</h5>
                </div>
                <div class="row-fluid text-center">
                    @Html.ActionLink("See now", "PreBuildComputers", "Home", new {typeId=3}, new {@class="btn btn-info btn-xs"})
                </div>
            </div>
        </div>
    </div>
</div>
